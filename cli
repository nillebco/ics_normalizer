init() {
    uv sync
    uv tool install prek
    prek install
}

lint() {
    prek --all-files
}

serve() {
    uv run uvicorn app:app --reload --host 0.0.0.0 --port 8000
}

# execute the function corresponding to the first parameter passed to this script
# passing all the remaining arguments

COMMAND=$1
$COMMAND ${@:2}
